{
  "name": "video-streaming-file-server",
  "version": "1.0.0",
  "description": "File server for video streaming application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "build": "echo \"File server ready for production\"",
    "health-check": "curl -f http://localhost:3001/health || exit 1",
    "setup": "npm install && mkdir -p thumbnails logs",
    "clean": "rm -rf node_modules thumbnails/* logs/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["video", "streaming", "server", "express"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "mime-types": "^2.1.35",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}